                    <li>Page active</li>
                    </ul>
        </div>
    </div><!-- End position -->

<div class="container margin_60">
    <div class="row">


<%= form_for @order, :url => checkout_path do |f| %>

        <div class="col-md-8 add_bottom_15">
            <div class="form_title">
                <h3><strong>1</strong>Your Details</h3>
                <p>
                    Mussum ipsum cacilds, vidis litro abertis.
                </p>
            </div>
            <div class="step">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>First name</label>
                            <%= f.text_field :first_name, :class=>"form-control" %>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Last name</label>
                            <%= f.text_field :last_name, :class=>"form-control" %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Email</label>
                            <%= f.text_field :email_address, :class=>"form-control" %> 
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Confirm email</label>
                            <input type="email" id="email_booking_2" name="email_booking_2" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Telephone</label>
                            <%= f.text_field :phone_number, :class=>"form-control" %> 
                        </div>
                    </div>
                </div>
            </div><!--End step -->

            <div class="form_title">
                <h3><strong>2</strong>Billing Address</h3>
                <p>
                    Mussum ipsum cacilds, vidis litro abertis.
                </p>
            </div>
            <div class="step">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Country</label>
                                <%= f.collection_select :billing_country_id, Shoppe::Country.ordered, :id, :name, {:include_blank => true }, {:class=>"form-control"}  %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Street line 1</label>
                            <%= f.text_field :billing_address1, :class=>"form-control" %> 

                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Street line 2</label>
                            <%= f.text_field :billing_address2, :class=>"form-control"%> 
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>City</label>
                            <%= f.text_field :billing_address3, :class=>"form-control" %> 
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>State</label>
                            <%= f.text_field :billing_address4, :class=>"form-control" %>                             
                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Postal code</label>
                            <%= f.text_field :billing_postcode, :class=>"form-control" %>                             
                        </div>
                    </div>
                </div><!--End row -->
            </div><!--End step -->


            <div id="policy">
                <h4>Cancellation policy</h4>
                <div class="form-group">
                    <label><input type="checkbox" name="policy_terms" id="policy_terms">I accept terms and conditions and general policy.</label>
                </div>
                <a><%= f.submit 'Continue', :class=>"btn_1 green medium" %></a>
            </div>
        </div>



<% end %>



        <%= render 'items', :order => current_order %>

        
    </div><!--End row -->
